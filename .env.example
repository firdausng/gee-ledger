DATABASE_URL=file:local.db

# Firebase Configuration (for server-side verification)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Session Configuration (generate a secure random string)
SESSION_COOKIE_SECRET=your-32-byte-random-secret-here

# Public Firebase Client Config (safe to expose in browser)
# Get these from Firebase Console > Project Settings > General > Your apps
PUBLIC_FIREBASE_API_KEY=your-api-key
PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=your-project-id
PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
PUBLIC_FIREBASE_APP_ID=your-app-id
PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id
